<!--pages/index/index.wxml-->

<view class="header">
  <text>{{fun_text}}</text>
</view>
<view class="ai_response4">
  <textarea class="ai_res_text" disabled="true" maxlength="2000" value="{{aiResponse}}" ></textarea>
</view>

<view class="user-prompt">
  <textarea class="textarea-prompt" placeholder="输入提示词" bindinput="promptChange" maxlength="300" value="{{user_prompt}}" ></textarea>
</view>

<view class="voice-input4">
  <textarea class="weui-textarea" placeholder="输入您的问题（可选）" bindinput="onInputChange" maxlength="200" value="{{voiceInput}}" ></textarea>
</view>
<view class="buttons4">
  <button  class="button14" bindtap="button1">发送图片并询问</button>
  <button class="button24" bindtap="button2">详细询问</button>
</view>
