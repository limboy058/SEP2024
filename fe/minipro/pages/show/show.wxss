/* index.wxss */
.container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 500px;
}

.image-container {
  display: flex;
  justify-content: center; /* 水平居中 */
  width: 100%; /* 确保容器占满宽度 */
}

.image {
  width: 100%;
  height: 100%;
}

.header {
  text-align: center;
  font-size: 80rpx;
  margin-bottom: 0rpx;
}

.right-align-text {
  display:block; 
  margin-left: 100rpx;
  font-size: 30px;
  font-weight: bold;
  font-family: 'Montserrat';
  color: #333;
  text-align: left;
}

.bottom-buttons {
  display: flex;
  position: fixed;
  bottom: 55rpx;
  justify-content: flex-end;
  width: 100%;
}

.bottom-button1 {
  padding: 25px 60px;
  background-color: #FCF6F5;
  color:coral;
  font-size: 28px;
  width:50% !important;
  float: left;
  border-radius: 20px;
}
