<!--pages/index/index.wxml-->

<view class="header">
  <text>{{fun_text}}</text>
</view>

<view class="ai-response" bindtouchstart="touchStart" bindtouchmove="touchMove" bindtouchend="touchEnd">
  <text>{{aiResponse}}</text>
</view>

<view class="face_name">
  <text>{{all_face_name}}</text>
</view>

<view class="voice-input">
  <textarea class="weui-textarea" placeholder="输入修改的人脸名称" bindinput="onInputChange" maxlength="200" value="{{voiceInput}}" ></textarea>
</view>

<view class="buttons">
  <button type="primary" class="button1" bindtap="button1">拍照询问</button>
  <button type="default" class="button2" bindtap="button2">上传相关人脸</button>
  <button type="default" class="button3" bindtap="button3">删除相关人脸</button>
</view>
