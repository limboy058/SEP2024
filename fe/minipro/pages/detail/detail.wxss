/* index.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  height: 100vh;
  padding: 20px;
}



scroll-view {
  height: 80vh;
  width: 100%;
  margin-bottom: 15vh;
  padding: 0 0;
}

.response-image {
  width: 100%;
  height: 200px;
  background-color: rgb(145,237,97);
  margin-bottom: 20px;
}

.user-que {
  width: 98%;
  padding: 10px;
  background-color: rgb(145,237,97);
  margin-bottom: 10px;
}

.ai-response {
  width: 98%;
  padding: 10px;
  background-color: rgb(241,241,241);
  margin-bottom: 10px;
}

.question-input {
  width: 90%;
  padding: 15px;
  position: fixed;
  bottom: 225rpx;
  border: 1px solid #ccc;
  margin-bottom: 20px;
  word-break: break-all;
}

.bottom-buttons {
  display: flex;
  position: fixed;
  bottom: 155rpx;
  justify-content: flex-end;
  width: 100%;
  margin-top: 20px;
}

.bottom-button1 {
  padding: 15px 20px;
  background-color: #007aff;
  color: white;
  width:45% !important;
  float: left;
  border-radius: 10px;
}
.bottom-button2 {
  padding: 15px 20px;
  width:45% !important;
  float: right;
  border-radius: 10px;
}