/* index.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  height: 100vh;
  padding: 20px;
}

.back-button {
  background-color: #007aff;
  color: white;
  width:45%;
  float: left;
  align-self: flex-start;
  margin-bottom: 20px;
}

scroll-view {
  height: 70vh;
  width: 100%;
  margin-bottom: 15vh;
  padding: 0 0;
}

.response-image {
  width: 100%;
  height: 200px;
  background-color: #ddd;
  margin-bottom: 20px;
}

.ai-response {
  width: 100%;
  padding: 10px;
  background-color: #f0f0f0;
  margin-bottom: 10px;
}

.question-input {
  width: 90%;
  padding: 10px;
  position: fixed;
  bottom: 50px;
  border: 1px solid #ccc;
  margin-bottom: 20px;
}

.bottom-buttons {
  display: flex;
  position: fixed;
  bottom: 10px;
  justify-content: flex-end;
  width: 100%;
  margin-top: 20px;
}

.bottom-button1 {
  padding: 10px 20px;
  background-color: #007aff;
  color: white;
  width:45% !important;
  float: left;
  border-radius: 5px;
}
.bottom-button2 {
  padding: 10px 20px;
  background-color: #007aff;
  color: white;
  width:45% !important;
  float: right;
  border-radius: 5px;
}