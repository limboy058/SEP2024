<!--pages/index/index.wxml-->

<view class="header">
  <text>{{fun_text}}</text>
</view>
<view class="ai_response2">
  <textarea class="ai_res_text" disabled="true" maxlength="2000" value="{{aiResponse}}" ></textarea>
</view>
<text style="margin: 10rpx; display:block; font-size: 18px; text-align: left;">在下方输入您的问题（可选）</text>
<view class="voice-input2">
  <textarea class="weui-textarea" placeholder="输入您的问题（可选）" bindinput="onInputChange" maxlength="200" value="{{voiceInput}}" ></textarea>
</view>
<view class="buttons2">
  <button  class="button12" bindtap="button1">发送图片并询问</button>
  <button class="button22" bindtap="button2">详细询问</button>
</view>
